                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="#">Log out</a></li>
                </ul>
              </li>
            </ul>
          </div>
        </div>
      </nav>
      <!-- Modal -->
    </nav>
    <div class="container" id="bsaa">
      <div class="row">
        <div class="col-12">
          <img
            src="<%= data.image %> "
            alt="photo"
            class="img-user"
          />
          <div class="title-name">
            <h2><%= data.username %> </h2>
            <h5><%= data.fullname %> </h5>
            <h5>birthday : <%= data.dateofbirth %> </h5>
          </div>
        </div>
        <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Update profile
</button>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="staticBackdropLabel">Update profile</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <span>Full name</span>
       <input type="text" class="row lol" value="<%= data.fullname %> ">
       <span>Email</span>
       <input type="text" class="row lol" value="<%= data.email %> ">
       <span>URL image</span>
       <input type="text" class="row lol" value="<%= data.image %> ">
       <span>User name</span>
       <input type="text" class="row lol" value="<%= data.username %> ">
       <span>Date of Birth</span>
       <input type="text" class="row lol" value="<%= data.dateofbirth %> ">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" id="close">Close</button>
        <button type="button" class="btn btn-primary" id="btn-update">Update</button>
      </div>
    </div>
  </div>
</div>
        <div class="col-12 toolbar">
          <a href="#" id="achievement">Achievements</a>
          <a href="#" id="study">Study sets</a>
          <a href="#" id="solution">Expert solution</a>
          <a href="#" id="foldera">Folders</a>
          <a href="#" id="classes">Classes</a>
        </div>
        <div class="col-12 containerSearch">
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle-buttom"
              href="#"
              role="button"
              data-bs-toggle="dropdown"
              aria-expanded="false"
            >
              Recent
            </a>
            <ul class="dropdown-menu">
              <li>
                <a class="dropdown-item" href="#"> Created</a>
              </li>
              <li>
                <a class="dropdown-item" href="#"> Recent</a>
              </li>
              <li><hr class="dropdown-divider" /></li>
              <li>
                <a class="dropdown-item" href="#"> Studied</a>
              </li>
            </ul>
          </li>
          <input type="search" placeholder="Search your sets" id="search" />
        </div>
      <!-- <div id="study-set-list"> -->
       
        <% for( let i = 0; i < questions.length; i++ ) { %>
          <div class="col-12 containerUpdate" id="study-set-<%= questions[i].set_id %> ">
            <div>
              <span class="title-upload">2 Terms</span>
              <img
                src="<%= data.image %>"
                alt="photo"
                class="img-user-upload"
              />
              <span class="nameUser"><%= data.username %> </span>
              
            </div>
            <h2><%= questions[i].title %> </h2>
          </div>
        <% } %>
        
      <!-- </div> -->
      </div>
